<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container">
    <div class="row">
        <h2 style="color: brown; text-align: center;">
            blog project
        </h2>
        <form action="/insertData" method="post" enctype="multipart/form-data">
            <input type="hidden" name="editid" value="<%= single.id%>">
           <h3>
            enter the title :
            <input type="text" name="title" placeholder="enter the title name" value="<%= single.title %>">
           </h3>
           <br>
           <h3>
            enter the discription :
            <input type="text" name="discpition" placeholder="enter the discription" value="<%= single.discpition %>">
           </h3>
           <br>
           <h3>
            select the image :
            <input type="file" name="avtar" placeholder="enter the title name"  ><br>
           </h3>
            <%if(single){ %>
                <img src="<%= single.avtar%>" width="150">
            <% } %>
           <br>
           <%if(single){ %>
            <input type="submit"  class="mb-2" value="edit"><br> 
            <% } else { %>
            <input type="submit"  class="mb-2"><br>
            <%}%>
           
           
        </form>
        
    </div>
    <br>
    <br>
</div>


<section>
    <div class="container">
        <div class="row">

            <% user.map((val)=>{ %>
                <% const {id,title,discpition,avtar} = val %>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%= avtar%>" alt="Card image cap" width="100px">
                    <div class="card-body">
                      <h5 class="card-title"><%= title %></h5>
                      <p class="card-text"><%= discpition %></p>
                      <a href='/deletedata?id=<%= id %>' class="btn btn-primary">Delete</a>
                      <a href='/edit?id=<%= id %>' class="btn btn-primary">edit</a>
                    </div>
                  </div>
            <% }) %>
            
        </div>
    </div>

</section>

